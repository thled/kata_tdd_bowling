{
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "pestphp/pest": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "bootstrap": [
            "cp .php_cs.dist .php_cs",
            "@composer install --ansi"
        ],
        "ci": [
            "@lint",
            "@phpstan",
            "@test"
        ],
        "lint": "php-cs-fixer fix --config=.php_cs -vvv --dry-run --allow-risky=yes --ansi",
        "fix": "php-cs-fixer fix --config=.php_cs --allow-risky=yes --ansi",
        "phpstan": "phpstan analyse --configuration phpstan.neon --ansi",
        "test": "phpunit tests --testdox --colors=always",
        "test:watch": [
            "Composer\\Config::disableProcessTimeout",
            "phpunit-watcher watch < /dev/tty"
        ],
        "infection": "infection --test-framework-options=\"tests\" --initial-tests-php-options=\"-d zend_extension=xdebug.so\" --ansi"
    }
}
